#!/bin/bash

set -e

# patch courtesy marco atzeri
# http://permalink.gmane.org/gmane.comp.programming.hdf/4735

patch -p2 < ../fix_get_console.patch
autoconf 

./configure LDFLAGS="-L$ARTIFACT/lib -Wl,-rpath=$ZLIB/lib -Wl,-rpath=$SZIP/lib" --with-szlib=$SZIP --with-zlib=$ZLIB --enable-shared --enable-threadsafe -disable-parallel --with-pthread --with-pic --enable-unsupported --prefix=$ARTIFACT

make
make install
make check-install
